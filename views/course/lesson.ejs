<% include ../layout/header %>
    <h3>
        Курс:
        <b>
            <%= course.title %>
        </b>
    </h3>
    <h4>
        Урок:
        <b>
            <%= lesson.title %>
        </b>
    </h4>
    <p>
        <a href="/">На главную</a> &nbsp &nbsp
        <a href="/course/<%= course.id %>">К курсу</a>
    </p>
    <p>
        <% if(user.id && user.login && user.id == course.owner) { %>
            <a href="/edit/lesson/<%= lesson.id %>">
                <button class="btn btn-primary">Редактировать</button>
            </a>
            <% } %>
    </p>
    <div class="modal-body">
        <div class="first-column">
            <p>
                <strong>Номер: </strong>
                <%= lesson.number %>
            </p>
            <p>
                <strong>Описание: </strong>
                <%= lesson.discripiton %>
            </p>
            <p>
                <strong>Длительность: </strong>
                <%= lesson.duration %>
            </p>
            <p>
                <strong>Создан: </strong>
                <%= lesson.createdAt %>
            </p>
            <ul>
                <% tasks.forEach(function(task) { %>
                    <li>
                        <h4>
                            <b>
                                <a href="/task/<%= task.id %>">
                                   <%= task.number %>
                                </a>
                            </b>
                        </h4>
                        <p>
                            <strong>Инструкция: </strong>
                            <%= task.instructions %>
                        </p>
                        <p>
                            <strong>Текст: </strong>
                            <%= task.text %>
                        </p>
                    </li>
                    <% }); %>
            </ul>
        </div>
        <div class="second-column">
            <% include ../layout/sidebar %>
        </div>
    </div>

    <% include ../layout/footer %>