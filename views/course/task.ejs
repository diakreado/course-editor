<% include ../layout/header %>
    <h3>
        Курс:
        <b>
            <%= course.title %>
        </b>
    </h3>
    <h4>
        Урок:
        <b>
            <%= lesson.title %>
        </b>
    </h4>
    <h5>Задание:
        <b>
            <%= task.number %>
        </b>
    </h5>
    <p>
        <a href="/">На главную</a> &nbsp &nbsp
        <a href="/course/<%= course.id %>">К курсу</a> &nbsp &nbsp
        <a href="/lesson/<%= lesson.id %>">К уроку</a>
    </p>
    <p>
        <% if(user.id && user.login && user.id == course.owner) { %>
            <a href="/edit/task/<%= task.id %>">
                <button class="btn btn-primary">Редактировать</button>
            </a>
            <% } %>
    </p>
    <div class="modal-body">
        <div class="first-column">
            <p>
                <strong>Инструкция: </strong>
                <%= task.instructions %>
            </p>
            <p>
                <strong>Текст: </strong>
                <%= task.text %>
            </p>
            <p>
                <strong>Создан: </strong>
                <%= task.createdAt %>
            </p>

            <input id="taskId" name="id" type="hidden" value="<%= task.id %>">

            <div id="waveform"></div>

        </div>
        <div class="second-column">
            <% include ../layout/sidebar %>
        </div>
    </div>

    <% include ../layout/footer %>


<script src="<%= assetFingerprint('/javascripts/waveform.js') %>"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/wavesurfer.js/2.0.6/wavesurfer.min.js"></script>
