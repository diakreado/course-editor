<% include ../layout/header %>
    <h2>
        <%= title %>
    </h2>
    <h3>
        Курс:
        <b>
            <%= course.title %>
            <% if(!course.published) { %> (не опубликовано) <% } %>
        </b>
    </h3>
    <p>
        <a href="/">На главную</a> &nbsp &nbsp
        <a href="/edit/course/<%= course.id %>">К курсу</a>
    </p>
    <div class="modal-body">
        <form method="post">
            <p>
                <button type="submit" name="save" class="btn btn-primary save-lesson">Сохранить</button>
                <button type="submit" name="delete" class="btn btn-danger delete-lesson">Удалить</button>
            </p>
            <h4>
                <div class="form-group">
                    <label for="nameOfLesson"><strong>Урок:</strong></label>
                    <input type="text" name="title" class="form-control" id="nameOfLesson" value="<%= lesson.title %>">
                </div>
            </h4>
            <div class="form-group">
                <label for="idOfLesson"><strong>Номер:</strong></label>
                <input type="number" name="number" class="form-control" id="numberOfLesson" value="<%= lesson.number %>">
            </div>
            <div class="form-group">
                <label for="discripitonOfLesson"><strong>Описание:</strong></label>
                <textarea class="form-control" name="discripiton" id="discripitonOfLesson" rows="3"><%= lesson.discripiton %></textarea>
            </div>
            <div class="form-group">
                <label for="idOfLesson"><strong>Длительность:</strong></label>
                <input type="number" name="duration" class="form-control" id="durationOfLesson" value="<%= lesson.duration %>">
            </div>
            <p>
                <strong>Создан: </strong>
                <%= lesson.createdAt %>
            </p>
            <input id="lessonId" name="id" type="hidden" value="<%= lesson.id %>">
        </form>
    </div>
    <hr>
    <p>
        <a href="/create/task/<%= lesson.id %>">
            <button class="btn btn-primary">Создать задание</button>
        </a>
    </p>
    <ul>
        <% tasks.forEach(function(task) { %>
            <li>
                <h4>
                    <b>
                        <a href="/edit/task/<%= task.id %>">
                            <%= task.number %>
                        </a>
                    </b>
                </h4>
                <p>
                    <strong>Инструкция: </strong>
                    <%= task.instructions %>
                </p>
                <p>
                    <strong>Текст: </strong>
                    <%= task.text %>
                </p>
            </li>
            <% }); %>
    </ul>
    <% include ../layout/footer %>