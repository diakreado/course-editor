<% include ../layout/header %>
    <h2>
        <%= title %> (не опубликовано)
    </h2>
    <p>
        <a href="/">На главную</a> 
    </p>
    <div class="modal-body">
        <form method="post">
        <p>
            <button type="submit" name="save" class="btn btn-primary save-curse">Сохранить</button>
            <button type="submit" name="publish" class="btn btn-secondary publish-curse">Опубликовать</button>
            <button type="submit" name="delete" class="btn btn-danger delete-curse">Удалить</button>
        </p>
            <h3>
                <div class="form-group">
                    <label for="nameOfCourse"><strong>Курс:</strong></label>
                    <input type="text" name="title" class="form-control" id="nameOfCourse" value="<%= project.title %>">
                </div>
            </h3>
            <div class="form-group">
                <label for="discripitonOfCourse">
                    <strong>Описание: </strong>
                </label>
                <textarea class="form-control" name="discripiton" id="discripitonOfCourse" rows="3"><%= project.discripiton %></textarea>
            </div>
            <div class="form-group">
                <label for="logoFile"> <strong>Логотип:</strong> </label>
                <%= project.logo %>
                    <input type="file" class="form-control-file" id="logoFile" name="logo">
            </div>
            <div class="form-group">
                <label for="complexitySelector">Сложность:</label>
                <div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="complexity" id="inlineRadio1" value="1" <% if(project.complexity=="1"
                            ) { %>checked<% } %>>
                            <label class="form-check-label" for="inlineRadio1">1</label>
                    </div>
                    <div class="form-check form-check-inline ">
                        <input class="form-check-input" type="radio" name="complexity" id="inlineRadio2" value="2" <% if(project.complexity=="2"
                            ) { %>checked<% } %>>
                            <label class="form-check-label" for="inlineRadio2">2</label>
                    </div>
                    <div class="form-check form-check-inline ">
                        <input class="form-check-input" type="radio" name="complexity" id="inlineRadio3" value="3" <% if(project.complexity=="3"
                            ) { %>checked<% } %>>
                            <label class="form-check-label" for="inlineRadio3">3</label>
                    </div>
                    <div class="form-check form-check-inline ">
                        <input class="form-check-input" type="radio" name="complexity" id="inlineRadio4" value="4" <% if(project.complexity=="4"
                            ) { %>checked<% } %>>
                            <label class="form-check-label" for="inlineRadio4">4</label>
                    </div>
                    <div class="form-check form-check-inline ">
                        <input class="form-check-input" type="radio" name="complexity" id="inlineRadio5" value="5" <% if(project.complexity=="5"
                            ) { %>checked<% } %>>
                            <label class="form-check-label" for="inlineRadio5">5</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="categorySelector"><strong>Категория:</strong></label>
                <select class="form-control" name="category">
                    <option <% if(project.category=="Первая категория" ) { %>selected="selected"
                        <% } %>>Первая категория
                    </option>
                    <option <% if(project.category=="Вторая категория" ) { %>selected="selected"
                        <% } %>>Вторая категория
                    </option>
                    <option <% if(project.category=="Третья категория" ) { %>selected="selected"
                        <% } %>>Третья категория
                    </option>
                </select>
            </div>
            <div class="form-group">
                <label for="authorsOfCourse"> <strong>Авторы курса :</strong> </label>
                <input type="text" name="authors" class="form-control" id="authorsOfCourse" value="<%=project.authors%>">
            </div>
            <strong>Создан: </strong>
            <%= project.createdAt %>
        </form>
    </div>
    <hr>
    <p>
        <a href="/create/<%=project.url %>/create-lesson">
            <button class="btn btn-primary">Создать урок</button>
        </a>
    </p>
    <ul>
        <% lessons.forEach(function(lesson) { %>
            <li>
                <h4>
                    <b>
                        <a href="/create/<%= project.url %>/lessons/<%= lesson.url %>">
                            <%= lesson.title %>
                        </a>
                    </b>
                </h4>
                <p>
                    <strong>Краткое описание: </strong>
                    <%= lesson.discripiton.substring(0, 100)%>...
                </p>
            </li>
            <% }); %>
    </ul>
    <% include ../layout/footer %>