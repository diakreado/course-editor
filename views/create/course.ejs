<% include ../layout/header %>

    <div class="header">
        <h2>
            <%= title %>
        </h2>
        <p>
            <a href="/">На главную</a>
        </p>
    </div>

    <div class="modal-body">
        <form method="post">
            <div class="form-group">
                <label for="nameOfCourse">Введите название курса:</label>
                <input type="text" name="title" class="form-control" id="nameOfCourse">
            </div>
            <div class="form-group">
                <label for="descriptionOfCourse">Введите описание курса:</label>
                <textarea class="form-control" name="description" id="descriptionOfCourse" rows="3"></textarea>
            </div>
            <div class="form-group">
                <label for="logoFile">Прикрепите логотип курса:</label>
                <input type="file" class="form-control-file" id="logoFile" name="logo">
            </div>
            <div class="form-group">
                <label for="complexitySelector">Укажите сложность курса:</label>
                <div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="complexityOfCurse" id="inlineRadio1" value="1" checked>
                        <label class="form-check-label" for="inlineRadio1">1</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="complexityOfCurse" id="inlineRadio2" value="2">
                        <label class="form-check-label" for="inlineRadio2">2</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="complexityOfCurse" id="inlineRadio3" value="3">
                        <label class="form-check-label" for="inlineRadio3">3</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="complexityOfCurse" id="inlineRadio4" value="4">
                        <label class="form-check-label" for="inlineRadio4">4</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="complexityOfCurse" id="inlineRadio5" value="5">
                        <label class="form-check-label" for="inlineRadio5">5</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="categorySelector">Укажите категорию курса:</label>
                <select class="form-control" name="category" id="categoryOfCurse">
                    <option>Первая категория</option>
                    <option>Вторая категория</option>
                    <option>Третья категория</option>
                </select>
            </div>
            <div class="form-group">
                <label for="authorsOfCourse">Авторы курса :</label>
                <input type="text" name="authors" class="form-control" id="authorsOfCourse">
            </div>
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="published" name="published">
                <label class="form-check-label" for="published">Опубликовано</label>
            </div>
            <br>
            <button type="submit" class="btn btn-primary create-curse">Создать курс</button>
        </form>
    </div>

    <% include ../layout/footer %>