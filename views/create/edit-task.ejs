<% include ../layout/header %>
    <h2>
        <%= title %>
    </h2>
    <h3>
        Курс:
        <b>
            <%= project.title %>
        </b>
    </h3>
    <h4>
        Урок:
        <b>
            <%= lesson.title %>
        </b>
    </h4>
    <h5>Задание:
        <b>
            <%= task.number %>
        </b>
    </h5>
    <p>
        <a href="/">На главную</a> &nbsp &nbsp
        <a href="/create/<%= project.url %>">К курсу</a> &nbsp &nbsp
        <a href="/create/<%= project.url %>/lessons/<%= lesson.url %>">К уроку</a>
    </p>
    <div class="modal-body">
        <p>
            <strong>Инструкция: </strong>
            <%= task.instructions %>
        </p>
        <p>
            <strong>Текст: </strong>
            <%= task.text %>
        </p>
        <p>
            <strong>Создан: </strong>
            <%= task.createdAt %>
        </p>
    </div>
    <% include ../layout/footer %>