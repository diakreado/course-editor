<% include ../layout/header %>
    <h1>
        <b>
            <%= title %>
        </b>
    </h1>
    <p>
        <a href="/">На главную</a>
    </p>
    <h2>Добавить новый урок</h2>

    <div class="modal-body">
        <form method="post">
            <div class="form-group">
                <label for="nameOfLesson">Введите название урока:</label>
                <input type="text" name="title" class="form-control" id="nameOfLesson" placeholder="название урока">
            </div>
            <div class="form-group">
                <label for="idOfLesson">Введите номер урока:</label>
                <input type="number" name="number" class="form-control" id="idOfLesson" placeholder="номер урока">
            </div>
            <div class="form-group">
                <label for="discripitonOfLesson">Введите описание курса:</label>
                <textarea class="form-control" name="discripiton" id="discripitonOfLesson" rows="3" placeholder="описание урока"></textarea>
            </div>
            <div class="form-group">
                <label for="logoFile">Прикрепите логотип урока:</label>
                <input type="file" class="form-control-file" id="logoFile" name="logo">
            </div>
            <div class="form-group">
                <label for="idOfLesson">Введите длительность урока:</label>
                <input type="number" name="duration" class="form-control" id="durationOfLesson" placeholder="длительность урока урока">
            </div>
            <button type="submit" class="btn btn-primary">Создать урок</button>
        </form>
    </div>

    <% include ../layout/footer %>