<% include ../layout/header %>
    <h2>
        <%= title %>
    </h2>
    <h3>
        Курс:
        <b>
            <%= project.title %>
        </b>
    </h3>
    <h4>
        Урок:
        <b>
            <%= lesson.title %>
        </b>
    </h4>
    <p>
        <a href="/">На главную</a> &nbsp &nbsp
        <a href="/create/<%= project.url %>">К курсу</a>
    </p>
    <div class="modal-body">
        <p>
            <strong>Номер: </strong>
            <%= lesson.number %>
        </p>
        <p>
            <strong>Описание: </strong>
            <%= lesson.discripiton %>
        </p>
        <p>
            <strong>Длительность: </strong>
            <%= lesson.duration %>
        </p>
        <p>
            <strong>Создан: </strong>
            <%= lesson.createdAt %>
        </p>
    </div>
    <p>
        <a href="/create/<%= project.url %>/<%= lesson.url %>/create-task">
            <button class="btn btn-primary">Создать задание</button>
        </a>
    </p>
    <ul>
        <% tasks.forEach(function(task) { %>
            <li>
                <h4>
                    <b>
                        <a href="/create/<%= project.url %>/<%= lesson.url %>/tasks/<%= task.url %>">
                            <%= task.number %>
                        </a>
                    </b>
                </h4>
                <p>
                    <strong>Инструкция: </strong>
                    <%= task.instructions %>
                </p>
                <p>
                    <strong>Текст: </strong>
                    <%= task.text %>
                </p>
            </li>
            <% }); %>
    </ul>
    <% include ../layout/footer %>